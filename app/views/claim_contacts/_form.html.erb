<div class="row">
  <div class="col-md-4">
    <div class="form-group">
      <label>First Name</label>
      <%= f.text_field :firstname, placeholder: "First Name", class: "form-control" %>
    </div>
  </div>
  <div class="col-md-4">
    <div class="form-group">
      <label>Last Name</label>
      <%= f.text_field :lastname, placeholder: "Last Name", class: "form-control" %>
    </div>
  </div>
  <div class="col-md-4">
    <div class="form-group">
      <label>Email</label>
      <%= f.text_field :email, placeholder: "Email", class: "form-control" %>
    </div>
  </div>
  <div class="col-md-4">
    <div class="form-group">
      <label>Type1</label>
      <%= f.select :type, options_for_select(Contact::TYPE_OPTIONS, @contact.type), {}, {class: "form-control"} %>
    </div>
  </div>
  <div class="col-md-4">
    <div class="form-group">
      <label>Preferred Contact Method</label>
      <%= f.select :preferred_method, options_for_select(Contact::PREFERRED_METHOD_OPTIONS, @contact.preferred_method), {}, {class: "form-control"} %>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-md-4">
    <div class="form-group">
      <label>Mobile</label>
      <%= f.text_field :mobile, placeholder: "Mobile", class: "form-control" %>
    </div>
  </div>
  <div class="col-md-4">
    <div class="form-group">
      <label>Office</label>
      <%= f.text_field :office, placeholder: "Office", class: "form-control" %>
    </div>
  </div>
  <div class="col-md-4" id="contact_other_form">
    <div class="form-group">
      <label>Other</label>
      <%= f.text_field :other, placeholder: "Other", class: "form-control" %>
    </div>
  </div>
</div>
<script type="text/javascript">
  if($('#contact_type').val() == "OtherContact"){
    $('#contact_other_form').show();
  }else{
    $('#contact_other_form').hide();
  }
  $('#contact_type').off().on('change', function(){
    if($(this).val() == 'OtherContact'){
      $('#contact_other_form').show();
    }else{
      $('#contact_other_form').hide();
    }
  })
</script>
