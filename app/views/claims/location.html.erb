<%= render 'claimleftmenu' %>
<%= render 'claimsummarymenu' %>

<div class="with-iconav">
  <div class="container-fluid-middle">
    <div class="row">
      <div class="col-md-12">
        <div class="panel panel-default">

          <div class="panel-heading">
            Location
          </div>
          <div class="panel-body">
            <div class="container">
              <%= form_for @claim do |f| %>

                <div class="row">
                  <div class="col-md-12">
                    <div class="form-group">
                      <label>Address</label>
                      <%= f.text_field :address, placeholder: "What is your address?", class: "form-control", required: true, id: "autoaddress" %>
                    </div>
                  </div>
                </div>
                <div class="text-center">
                  <%= f.submit "Save", class: "btn btn-form" %>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>


<script>
  $(function() {
    $("#autoaddress").geocomplete();
  })
</script>
