            <li class="dropdown-item-dark"><%= link_to "Profile", user_path(current_user.id) %></li>
            <li class="dropdown-item-dark"><%= link_to "Log out", destroy_user_session_path, method: :delete %></li>
          </ul>
        </li>

        <% end %>
      </ul>
